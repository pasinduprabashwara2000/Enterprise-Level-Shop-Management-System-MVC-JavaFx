<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="1075.0" styleClass="anchor-pane" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageReportsController">

    <children>

        <!-- TITLE -->
        <Label layoutX="32.0" layoutY="25.0" text="Manage Reports">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- FILTER PANEL -->
        <HBox layoutX="32.0" layoutY="80.0" spacing="15.0">

            <ComboBox fx:id="cmbReportType" prefHeight="43.0" prefWidth="277.0" promptText="Select Report Type" styleClass="combo-box" stylesheets="@css/style2.css">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Monthly Sales Report" />
                        <String fx:value="Daily Sales Report" />
                        <String fx:value="Product Wise Sales Report" />
                        <String fx:value="Top Selling Products Report" />
                        <String fx:value="Inventory / Stock Report" />
                        <String fx:value="Low Stock Report" />
                        <String fx:value="Customer Purchase Report" />
                        <String fx:value="Revenue Report" />
                        <String fx:value="Profit Report" />
                        <String fx:value="Payment Report" />
                        <String fx:value="Return Report" />
                    </FXCollections>
                    </items>
                </ComboBox>

            <DatePicker fx:id="fromDate" prefHeight="44.0" prefWidth="209.0" promptText="From Date" stylesheets="@css/style2.css" />
            <DatePicker fx:id="toDate" prefHeight="43.0" prefWidth="209.0" promptText="To Date" stylesheets="@css/style2.css" />

            <Button fx:id="btnGenerate" alignment="CENTER" contentDisplay="CENTER" onAction="#generateReports" prefHeight="35.0" prefWidth="160.0" styleClass="success-btn" stylesheets="@css/style4.css" text="Generate Report">
            <font>
               <Font name="System Bold" size="13.0" />
            </font></Button>
        </HBox>

    </children>
</AnchorPane>
