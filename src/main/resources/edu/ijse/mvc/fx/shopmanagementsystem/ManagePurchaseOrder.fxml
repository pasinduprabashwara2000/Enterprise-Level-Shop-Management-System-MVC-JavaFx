<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManagePurchaseOrderController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="300.0" text="Manage Purchase Order">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <TextField fx:id="poIdTxt" managed="false" visible="false" />
        <Label layoutX="34.0" layoutY="81.0" text="Supplier ID :">
         <font>
            <Font size="15.0" />
         </font></Label>

        <Label layoutX="34.0" layoutY="136.0" text="Created At :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <DatePicker fx:id="createdAtPicker" layoutX="206.0" layoutY="129.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="78.0" text="Created By :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="createdByTxt" layoutX="650.0" layoutY="70.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="134.0" text="Status :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <ComboBox fx:id="statusCombo" layoutX="650.0" layoutY="126.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Status">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="DRAFT" />
                    <String fx:value="SENT" />
                    <String fx:value="RECEIVED" />
                    <String fx:value="CANCELLED" />
                    <String fx:value="PARTIAL" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label layoutX="521.0" layoutY="189.0" text="Expected Date :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <DatePicker fx:id="expectedDatePicker" layoutX="650.0" layoutY="181.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="191.0" text="Total Cost :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="totalCostTxt" layoutX="206.0" layoutY="183.0" prefHeight="38.0" prefWidth="259.0" />

        <Button fx:id="saveBtn" layoutX="236.0" layoutY="250.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="250.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="250.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="250.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="poTable" layoutX="33.0" layoutY="319.0" prefHeight="331.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colPOID" prefWidth="100.0" text="PO ID" />
                <TableColumn fx:id="colSupplierID" prefWidth="150.0" text="Supplier ID" />
                <TableColumn fx:id="colCreatedAt" prefWidth="150.0" text="Created At" />
                <TableColumn fx:id="colCreatedBy" prefWidth="150.0" text="Created By" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                <TableColumn fx:id="colExpectedDate" prefWidth="150.0" text="Expected Date" />
                <TableColumn fx:id="colTotalCost" prefWidth="179.0" text="Total Cost" />
            </columns>
        </TableView>
      <ComboBox fx:id="supplierIdCombo" layoutX="206.0" layoutY="70.0" onAction="#loadSupplierId" prefHeight="38.0" prefWidth="259.0" promptText="Select Supplier ID" />
    </children>
</AnchorPane>
