<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane
        prefHeight="680.0"
        prefWidth="1075.0"
        styleClass="white-bg"
        stylesheets="@css/style3.css"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.DashboardController">

    <children>

        <!-- SUMMARY BOXES -->
        <FlowPane
                fx:id="flowStats"
                layoutX="18.0"
                layoutY="70.0"
                prefWidth="1040.0"
                hgap="20.0"
                vgap="20.0">

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box1">
                <Label text="Total Products" styleClass="dashboard-label"/>
                <Label fx:id="lblProductsCount" text="0" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box2">
                <Label text="Total Customers" styleClass="dashboard-label"/>
                <Label fx:id="lblCustomerCount" text="0" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box3">
                <Label text="Total Sales" styleClass="dashboard-label"/>
                <Label fx:id="lblSalesCount" text="0" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box4">
                <Label text="Total Revenue" styleClass="dashboard-label"/>
                <Label fx:id="lblRevenue" text="Rs. 0.00" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box5">
                <Label text="Total Suppliers" styleClass="dashboard-label"/>
                <Label fx:id="lblSupplierCount" text="0" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box6">
                <Label text="Purchase Orders" styleClass="dashboard-label"/>
                <Label fx:id="lblPurchaseOrders" text="0" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box7">
                <Label text="Returns" styleClass="dashboard-label"/>
                <Label fx:id="lblReturnCount" text="0" styleClass="dashboard-value"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="230.0" spacing="10.0" styleClass="box8">
                <Label text="Inventory Items" styleClass="dashboard-label"/>
                <Label fx:id="lblInventoryCount" text="0" styleClass="dashboard-value"/>
            </VBox>

        </FlowPane>

        <!-- TITLE -->
        <Label layoutX="20.0" layoutY="27.0" text="Summary">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>

        <Label layoutX="20.0" layoutY="338.0" text="Top Selling Products">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>

        <!-- TABLE -->
        <TableView
                fx:id="detailsTable"
                layoutX="20.0"
                layoutY="390.0"
                prefWidth="1003.0"
                prefHeight="314.0"
                stylesheets="@css/style2.css">

            <columns>
                <TableColumn fx:id="colProductID" text="Product ID" prefWidth="100.0"/>
                <TableColumn fx:id="colSKU" text="SKU" prefWidth="100.0"/>
                <TableColumn fx:id="colBarcode" text="Barcode" prefWidth="120.0"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150.0"/>
                <TableColumn fx:id="colUnit" text="Unit" prefWidth="70.0"/>
                <TableColumn fx:id="colUnitPrice" text="Unit Price" prefWidth="120.0"/>
                <TableColumn fx:id="colQty" text="QTY" prefWidth="60.0"/>
                <TableColumn fx:id="colTaxRate" text="Tax Rate" prefWidth="100.0"/>
                <TableColumn fx:id="colActive" text="Active" prefWidth="80.0"/>
                <TableColumn fx:id="colCategoryID" text="Category ID" prefWidth="100.0"/>
            </columns>

        </TableView>

    </children>
</AnchorPane>
