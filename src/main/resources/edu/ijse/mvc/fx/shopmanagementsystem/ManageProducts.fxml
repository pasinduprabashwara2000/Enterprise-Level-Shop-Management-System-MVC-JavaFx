<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageProductController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="300.0" text="Manage Product">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="34.0" layoutY="76.0" text="Product ID :" />
        <TextField fx:id="productIDTxt" layoutX="206.0" layoutY="74.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="132.0" text="SKU :" />
        <TextField fx:id="skuTxt" layoutX="206.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="187.0" text="Barcode :" />
        <TextField fx:id="barcodeTxt" layoutX="206.0" layoutY="185.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="242.0" text="Name :" />
        <TextField fx:id="nameTxt" layoutX="206.0" layoutY="240.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="297.0" text="Unit :" />
        <TextField fx:id="unitTxt" layoutX="206.0" layoutY="295.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="76.0" text="Unit Price :" />
        <TextField fx:id="unitPriceTxt" layoutX="650.0" layoutY="74.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="132.0" text="Tax Rate (%) :" />
        <TextField fx:id="taxRateTxt" layoutX="650.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="187.0" text="Active :" />
        <CheckBox fx:id="activeChk" layoutX="650.0" layoutY="185.0" text="Active" />

        <Label layoutX="521.0" layoutY="242.0" text="Customer ID :" />
        <TextField fx:id="customerIDTxt" layoutX="650.0" layoutY="240.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="297.0" text="Category ID :" />
        <TextField fx:id="categoryIDTxt" layoutX="650.0" layoutY="295.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="353.0" text="Product Image :" />
        <ImageView fx:id="productImageView" fitHeight="150.0" fitWidth="150.0" layoutX="206.0" layoutY="350.0" preserveRatio="true" style="-fx-border-color: #ccc; -fx-border-radius: 6;" />

        <Button fx:id="saveBtn" layoutX="216.0" layoutY="400.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="375.0" layoutY="400.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="532.0" layoutY="400.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="686.0" layoutY="400.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="productTable" layoutX="20.0" layoutY="464.0" prefHeight="280.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colProductID" prefWidth="100.0" text="Product ID" />
                <TableColumn fx:id="colSKU" prefWidth="100.0" text="SKU" />
                <TableColumn fx:id="colBarcode" prefWidth="100.0" text="Barcode" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colUnit" prefWidth="100.0" text="Unit" />
                <TableColumn fx:id="colUnitPrice" prefWidth="100.0" text="Unit Price" />
                <TableColumn fx:id="colTaxRate" prefWidth="80.0" text="Tax Rate" />
                <TableColumn fx:id="colActive" prefWidth="70.0" text="Active" />
                <TableColumn fx:id="colCustomerID" prefWidth="100.0" text="Customer ID" />
                <TableColumn fx:id="colCategoryID" prefWidth="100.0" text="Category ID" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
