<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageProductController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="300.0" text="Manage Product">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="34.0" layoutY="76.0" text="Product ID :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="productIDTxt" layoutX="206.0" layoutY="74.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="132.0" text="SKU :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="skuTxt" layoutX="206.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="187.0" text="Barcode :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="barcodeTxt" layoutX="206.0" layoutY="185.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="242.0" text="Name :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="nameTxt" layoutX="206.0" layoutY="240.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="297.0" text="Unit :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="unitTxt" layoutX="206.0" layoutY="295.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="76.0" text="Unit Price :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="unitPriceTxt" layoutX="650.0" layoutY="74.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="132.0" text="Tax Rate (%) :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <TextField fx:id="taxRateTxt" layoutX="650.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="193.0" text="Active :">
         <font>
            <Font size="15.0" />
         </font></Label>
        <CheckBox fx:id="activeChk" layoutX="650.0" layoutY="191.0" text="Active" />

        <Label layoutX="522.0" layoutY="247.0" text="Category ID :">
         <font>
            <Font size="15.0" />
         </font></Label>

        <Button fx:id="saveBtn" layoutX="220.0" layoutY="350.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="379.0" layoutY="350.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="536.0" layoutY="350.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="690.0" layoutY="350.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="detailsTable" layoutX="20.0" layoutY="412.0" prefHeight="245.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colProductID" prefWidth="100.0" text="Product ID" />
                <TableColumn fx:id="colSKU" prefWidth="100.0" text="SKU" />
                <TableColumn fx:id="colBarcode" prefWidth="100.0" text="Barcode" />
                <TableColumn fx:id="colName" prefWidth="246.0" text="Name" />
                <TableColumn fx:id="colUnit" prefWidth="60.0" text="Unit" />
                <TableColumn fx:id="colUnitPrice" prefWidth="107.0" text="Unit Price" />
                <TableColumn fx:id="colTaxRate" prefWidth="99.0" text="Tax Rate" />
                <TableColumn fx:id="colActive" prefWidth="87.0" text="Active" />
                <TableColumn fx:id="colCategoryID" prefWidth="100.0" text="Category ID" />
            </columns>
        </TableView>
      <ComboBox fx:id="categoryCombo" layoutX="650.0" layoutY="240.0" onAction="#loadCategoryID" prefHeight="38.0" prefWidth="259.0" promptText="Select Category" />
    </children>
</AnchorPane>
