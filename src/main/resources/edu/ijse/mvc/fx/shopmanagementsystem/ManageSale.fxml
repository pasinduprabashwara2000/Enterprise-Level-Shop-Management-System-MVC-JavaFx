<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageSaleController">

    <children>

        <Label layoutX="33.0" layoutY="18.0" text="Manage Sales">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <TextField fx:id="saleIdTxt" managed="false" visible="false" />

        <Label layoutX="34.0" layoutY="74.0" text="Customer ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="customerIdCombo" layoutX="206.0" layoutY="71.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Customer ID" />

        <Label layoutX="33.0" layoutY="134.0" text="Product ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="productIdCombo" layoutX="204.0" layoutY="130.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Product ID" />

        <Label layoutX="33.0" layoutY="193.0" text="Promotion ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="promotionIdCombo" layoutX="205.0" layoutY="192.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Promotion ID" />

        <Label layoutX="33.0" layoutY="260.0" text="Quantity :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="quantityTxt" layoutX="205.0" layoutY="253.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="520.0" layoutY="74.0" text="Total Amount :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="totalAmountTxt" layoutX="651.0" layoutY="74.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="131.0" text="Discount :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="discountTxt" layoutX="650.0" layoutY="131.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="520.0" layoutY="189.0" text="Net Total :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="netTotalTxt" editable="false" layoutX="649.0" layoutY="189.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="248.0" text="Sale Date :">
            <font><Font size="15.0" /></font>
        </Label>
        <DatePicker fx:id="datePicker" layoutX="650.0" layoutY="248.0" prefHeight="38.0" prefWidth="259.0" />

        <Button fx:id="saveBtn" layoutX="228.0" layoutY="321.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />

        <Button fx:id="updateBtn" layoutX="387.0" layoutY="321.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />

        <Button fx:id="deleteBtn" layoutX="544.0" layoutY="321.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />

        <Button fx:id="resetBtn" layoutX="698.0" layoutY="321.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="saleTable" layoutX="27.0" layoutY="384.0" prefHeight="274.0" prefWidth="1000.0">

            <columns>
                <TableColumn fx:id="colSaleId" prefWidth="80.0" text="Sale ID" />
                <TableColumn fx:id="colCustomerId" prefWidth="130.0" text="Customer ID" />
                <TableColumn fx:id="colProductId" prefWidth="130.0" text="Product ID" />
                <TableColumn fx:id="colPromotionId" prefWidth="130.0" text="Promotion ID" />
                <TableColumn fx:id="colQty" prefWidth="70.0" text="QTY" />
                <TableColumn fx:id="colTotalAmount" prefWidth="100.0" text="Total" />
                <TableColumn fx:id="colDiscount" prefWidth="100.0" text="Discount" />
                <TableColumn fx:id="colNetTotal" prefWidth="110.0" text="Net Total" />
                <TableColumn fx:id="colSaleDate" prefWidth="150.0" text="Date" />
            </columns>

        </TableView>

    </children>
</AnchorPane>
