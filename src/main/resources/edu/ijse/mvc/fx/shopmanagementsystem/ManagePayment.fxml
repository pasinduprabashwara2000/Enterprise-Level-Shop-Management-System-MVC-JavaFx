<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManagePaymentController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="300.0" text="Manage Payment">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="34.0" layoutY="76.0" prefWidth="157.0" text="Payment ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="paymentIDTxt" layoutX="206.0" layoutY="75.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="132.0" prefWidth="157.0" text="Sale ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="saleIDTxt" layoutX="206.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="187.0" prefHeight="35.0" prefWidth="157.0" text="Method :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="methodCmb" layoutX="206.0" layoutY="185.0" prefHeight="35.0" prefWidth="259.0" promptText="Select Method" />

        <Label layoutX="521.0" layoutY="76.0" prefWidth="157.0" text="Amount :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="amountTxt" layoutX="650.0" layoutY="75.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="132.0" prefWidth="157.0" text="Reference :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="referenceTxt" layoutX="650.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="187.0" prefHeight="30.0" prefWidth="157.0" text="Received At :">
            <font><Font size="15.0" /></font>
        </Label>
        <DatePicker fx:id="receivedAtPicker" layoutX="650.0" layoutY="185.0" prefWidth="259.0" />

        <Button fx:id="saveBtn" layoutX="236.0" layoutY="263.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="263.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="263.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="263.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="paymentTable" layoutX="33.0" layoutY="320.0" prefHeight="300.0" prefWidth="1003.0">
            <columns>
                <TableColumn prefWidth="120.0" text="Payment ID" />
                <TableColumn prefWidth="120.0" text="Sale ID" />
                <TableColumn prefWidth="153.0" text="Method" />
                <TableColumn prefWidth="166.0" text="Amount" />
                <TableColumn prefWidth="179.0" text="Reference" />
                <TableColumn prefWidth="263.0" text="Received At" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
