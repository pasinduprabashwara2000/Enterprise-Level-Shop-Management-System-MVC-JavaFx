<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="612.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageUserController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="201.0" text="Manage User">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>

        <Label fx:id="userIDLabel" layoutX="34.0" layoutY="76.0" prefHeight="38.0" prefWidth="157.0"
               text="User ID : " stylesheets="@css/style.css">
            <font><Font size="15.0"/></font>
        </Label>
        <TextField fx:id="userIDTxt" layoutX="206.0" layoutY="75.0" prefHeight="38.0" prefWidth="259.0"
                   stylesheets="@css/style.css"/>

        <Label fx:id="userNameLabel" layoutX="34.0" layoutY="132.0" prefHeight="38.0" prefWidth="157.0"
               text="User Name : " stylesheets="@css/style.css">
            <font><Font size="15.0"/></font>
        </Label>
        <TextField fx:id="userNameTxt" layoutX="206.0" layoutY="130.0" prefHeight="38.0" prefWidth="259.0"
                   stylesheets="@css/style.css"/>

        <Label fx:id="passwordLabel" layoutX="34.0" layoutY="187.0" prefHeight="38.0" prefWidth="157.0"
               text="Password : " stylesheets="@css/style.css">
            <font><Font size="15.0"/></font>
        </Label>
        <PasswordField fx:id="passwordTxt" layoutX="206.0" layoutY="189.0" prefHeight="38.0" prefWidth="259.0"/>

        <Label fx:id="activeLabel" layoutX="521.0" layoutY="73.0" prefHeight="38.0" prefWidth="157.0"
               text="Active : " stylesheets="@css/style.css">
            <font><Font size="15.0"/></font>
        </Label>
        <ChoiceBox fx:id="activeStatusPicker" layoutX="650.0" layoutY="73.0" prefHeight="38.0" prefWidth="259.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Active"/>
                    <String fx:value="Inactive"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value="Please Select"/>
            </value>
        </ChoiceBox>

        <Label fx:id="createdAtLabel" layoutX="521.0" layoutY="128.0" prefHeight="38.0" prefWidth="157.0"
               text="Created At : " stylesheets="@css/style.css">
            <font><Font size="15.0"/></font>
        </Label>
        <DatePicker fx:id="datePicker" layoutX="650.0" layoutY="128.0" prefHeight="38.0" prefWidth="259.0"/>

        <Button fx:id="saveBtn" layoutX="236.0" layoutY="254.0" prefHeight="38.0" prefWidth="132.0"
                text="Save" styleClass="btn" stylesheets="@css/style.css" onAction="#navigateSave"/>
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="254.0" prefHeight="38.0" prefWidth="132.0"
                text="Update" styleClass="btn" stylesheets="@css/style.css" onAction="#navigateUpdate"/>
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="254.0" prefHeight="38.0" prefWidth="132.0"
                text="Delete" styleClass="btn" stylesheets="@css/style.css" onAction="#navigateDelete"/>
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="254.0" prefHeight="38.0" prefWidth="132.0"
                text="Reset" styleClass="btn" stylesheets="@css/style.css" onAction="#navigateReset"/>

        <TableView fx:id="detailsTable" layoutX="33.0" layoutY="322.0" prefHeight="264.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="167.0" text="User ID"/>
                <TableColumn fx:id="colName" prefWidth="287.0" text="User Name"/>
                <TableColumn fx:id="colPassword" prefWidth="197.0" text="Password"/>
                <TableColumn fx:id="colActive" prefWidth="131.0" text="Active"/>
                <TableColumn fx:id="colCreatedAt" prefWidth="219.0" text="Created At"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
