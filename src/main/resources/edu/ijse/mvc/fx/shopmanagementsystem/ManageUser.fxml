<AnchorPane prefHeight="680.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageUserController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="201.0" text="Manage User">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label fx:id="userIDLabel" layoutX="34.0" layoutY="76.0" prefHeight="38.0" prefWidth="157.0" stylesheets="@css/style.css" text="User ID : ">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="userIDTxt" layoutX="206.0" layoutY="75.0" prefHeight="38.0" prefWidth="259.0" stylesheets="@css/style.css" />

        <Label fx:id="userNameLabel" layoutX="34.0" layoutY="132.0" prefHeight="38.0" prefWidth="157.0" stylesheets="@css/style.css" text="User Name : ">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="userNameTxt" layoutX="206.0" layoutY="130.0" prefHeight="38.0" prefWidth="259.0" stylesheets="@css/style.css" />

        <Label fx:id="passwordLabel" layoutX="34.0" layoutY="187.0" prefHeight="38.0" prefWidth="157.0" stylesheets="@css/style.css" text="Password : ">
            <font><Font size="15.0" /></font>
        </Label>
        <PasswordField fx:id="passwordTxt" layoutX="206.0" layoutY="189.0" prefHeight="38.0" prefWidth="259.0" />

        <Label fx:id="activeLabel" layoutX="521.0" layoutY="73.0" prefHeight="38.0" prefWidth="157.0" stylesheets="@css/style.css" text="Active : ">
            <font><Font size="15.0" /></font>
        </Label>
        <ChoiceBox fx:id="activeStatusPicker" layoutX="650.0" layoutY="73.0" prefHeight="38.0" prefWidth="259.0" styleClass="combo-box" stylesheets="@css/style2.css">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Active" />
                    <String fx:value="Inactive" />
                </FXCollections>
            </items>
            <value>
                <String fx:value="Please Select" />
            </value>
        </ChoiceBox>

        <Label fx:id="createdAtLabel" layoutX="521.0" layoutY="128.0" prefHeight="38.0" prefWidth="157.0" stylesheets="@css/style.css" text="Created At : ">
            <font><Font size="15.0" /></font>
        </Label>
        <DatePicker fx:id="datePicker" layoutX="650.0" layoutY="128.0" prefHeight="38.0" prefWidth="259.0" />

        <Button fx:id="saveBtn" layoutX="236.0" layoutY="254.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" stylesheets="@css/style.css" text="Save" />
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="254.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" stylesheets="@css/style.css" text="Update" />
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="254.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" stylesheets="@css/style.css" text="Delete" />
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="254.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" stylesheets="@css/style.css" text="Reset" />

        <TableView fx:id="detailsTable" layoutX="33.0" layoutY="322.0" prefHeight="316.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="167.0" text="User ID" />
                <TableColumn fx:id="colName" prefWidth="287.0" text="User Name" />
                <TableColumn fx:id="colPassword" prefWidth="197.0" text="Password" />
                <TableColumn fx:id="colActive" prefWidth="131.0" text="Active" />
                <TableColumn fx:id="colCreatedAt" prefWidth="219.0" text="Created At" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
