                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="7" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
