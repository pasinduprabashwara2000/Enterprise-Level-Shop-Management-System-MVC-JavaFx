                      <!-- Row 4 -->
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleDecimal" style="-fx-font-size: 18;" text="." GridPane.columnIndex="2" GridPane.rowIndex="4" />
