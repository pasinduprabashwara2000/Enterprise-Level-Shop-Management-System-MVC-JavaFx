                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleOperator" style="-fx-font-size: 18; -fx-background-color: #4ecdc4; -fx-text-fill: white;" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      
                      <!-- Row 3 -->
                      <Button maxHeight="Infinity" maxWidth="Infinity" onAction="#handleNumber" style="-fx-font-size: 18;" text="1" GridPane.columnIndex="0" GridPane.rowIndex="3" />
