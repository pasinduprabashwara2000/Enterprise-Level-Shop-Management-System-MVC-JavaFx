<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1075.0" styleClass="anchor-pane" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.controller.ManageExpenseController">

    <children>

        <!-- Title -->
        <Label layoutX="30" layoutY="20" text="Manage Expenses">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Hidden ID -->
        <TextField fx:id="idTxt" managed="false" visible="false" />

        <!-- Title -->
        <Label layoutX="30" layoutY="80" text="Title :">
         <font>
            <Font size="16.0" />
         </font></Label>
        <TextField fx:id="titleTxt" layoutX="171.0" layoutY="75.0" prefHeight="38.0" prefWidth="250" />

        <!-- Category -->
        <Label layoutX="30.0" layoutY="138.0" text="Category Type :">
         <font>
            <Font size="16.0" />
         </font></Label>

        <!-- Amount -->
        <Label layoutX="30.0" layoutY="195.0" text="Amount :">
         <font>
            <Font size="16.0" />
         </font></Label>
        <TextField fx:id="amountTxt" layoutX="171.0" layoutY="190.0" prefHeight="38.0" prefWidth="250" />

        <!-- Payment Method -->
        <Label layoutX="470" layoutY="80" text="Payment Method :">
         <font>
            <Font size="16.0" />
         </font></Label>

        <!-- Date -->
        <Label layoutX="470.0" layoutY="138.0" text="Date :">
         <font>
            <Font size="16.0" />
         </font></Label>

        <!-- Buttons -->
        <Button fx:id="saveBtn" layoutX="258.0" layoutY="257.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="120" text="Save" textFill="WHITE" />

        <Button fx:id="updateBtn" layoutX="398.0" layoutY="257.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="120" styleClass="btn" text="Update" />

        <Button fx:id="resetBtn" layoutX="678.0" layoutY="257.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="120" text="Reset" textFill="WHITE" />

        <Button fx:id="deleteBtn" layoutX="538.0" layoutY="257.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="120" text="Delete" textFill="WHITE" />

        <!-- Table -->
        <TableView fx:id="expenseTable" layoutX="30" layoutY="320.0" prefHeight="300.0" prefWidth="983.0">

            <columns>
                <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                <TableColumn fx:id="colTitle" prefWidth="180" text="Title" />
                <TableColumn fx:id="colCategory" prefWidth="160" text="Category" />
                <TableColumn fx:id="colAmount" prefWidth="140" text="Amount" />
                <TableColumn fx:id="colPaymentMethod" prefWidth="221.0" text="Payment Method" />
                <TableColumn fx:id="colDate" prefWidth="197.0" text="Date" />
            </columns>

        </TableView>
      <DatePicker fx:id="datePicker" layoutX="636.0" layoutY="133.0" prefHeight="38.0" prefWidth="250.0" />
      <ComboBox fx:id="methodPicker" layoutX="636.0" layoutY="72.0" prefHeight="29.0" prefWidth="250.0" promptText="Select Payment Method" />
      <ComboBox fx:id="typePicker" layoutX="170.0" layoutY="130.0" prefHeight="43.0" prefWidth="250.0" promptText="Select Category Type" />

    </children>
</AnchorPane>
