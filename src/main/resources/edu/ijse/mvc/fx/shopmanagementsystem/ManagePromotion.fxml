        <TextField fx:id="promoteIDTxt" layoutX="206.0" layoutY="75.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="132.0" prefWidth="157.0" text="Promotion Name :">
            <font><Font size="15.0" /></font>
        </Label>
