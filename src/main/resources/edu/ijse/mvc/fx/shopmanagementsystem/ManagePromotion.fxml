        </Label>
        <ComboBox fx:id="typeCmb" layoutX="206.0" layoutY="185.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Type" />

        <Label layoutX="521.0" layoutY="76.0" prefWidth="157.0" text="Value :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="valueTxt" layoutX="650.0" layoutY="75.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="132.0" prefWidth="157.0" text="Start Date :">
            <font><Font size="15.0" /></font>
        </Label>
        <DatePicker fx:id="startDatePicker" layoutX="650.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="187.0" prefWidth="157.0" text="End Date :">
            <font><Font size="15.0" /></font>
