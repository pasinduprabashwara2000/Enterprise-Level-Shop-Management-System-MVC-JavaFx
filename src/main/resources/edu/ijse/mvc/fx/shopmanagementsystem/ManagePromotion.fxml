<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManagePromotionController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="300.0" text="Manage Promotion">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <TextField fx:id="promoteIDTxt" managed="false" visible="false" />
        <Label layoutX="39.0" layoutY="85.0" prefWidth="157.0" text="Promotion Name :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="nameTxt" layoutX="211.0" layoutY="76.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="39.0" layoutY="142.0" prefWidth="157.0" text="Type :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="typeCmb" layoutX="211.0" layoutY="131.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Type" />

        <Label layoutX="512.0" layoutY="82.0" prefWidth="157.0" text="Value :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="valueTxt" layoutX="641.0" layoutY="76.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="512.0" layoutY="138.0" prefWidth="157.0" text="Start Date :">
            <font><Font size="15.0" /></font>
        </Label>
        <DatePicker fx:id="startDatePicker" layoutX="641.0" layoutY="131.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="512.0" layoutY="193.0" prefWidth="157.0" text="End Date :">
            <font><Font size="15.0" /></font>
        </Label>
        <DatePicker fx:id="endDatePicker" layoutX="641.0" layoutY="186.0" prefHeight="38.0" prefWidth="259.0" />

        <Label layoutX="39.0" layoutY="200.0" prefWidth="157.0" text="Active :">
            <font><Font size="15.0" /></font>
        </Label>
        <ComboBox fx:id="activeCmb" layoutX="211.0" layoutY="190.0" prefHeight="38.0" prefWidth="259.0" promptText="Select Status" />

        <Label layoutX="39.0" layoutY="262.0" prefWidth="157.0" text="Product ID :">
            <font><Font size="15.0" /></font>
        </Label>

        <Button fx:id="saveBtn" layoutX="236.0" layoutY="315.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="315.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="315.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="315.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="promotionTable" layoutX="33.0" layoutY="372.0" prefHeight="278.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colPromotionID" prefWidth="110.0" text="Promotion ID" />
                <TableColumn fx:id="colName" prefWidth="110.0" text="Name" />
                <TableColumn fx:id="colType" prefWidth="110.0" text="Type" />
                <TableColumn fx:id="colValue" prefWidth="90.0" text="Value" />
                <TableColumn fx:id="colStartDate" prefWidth="122.0" text="Start Date" />
                <TableColumn fx:id="colEndDate" prefWidth="138.0" text="End Date" />
                <TableColumn fx:id="colActive" prefWidth="129.0" text="Active" />
                <TableColumn fx:id="colProductID" prefWidth="192.0" text="Product ID" />
            </columns>
        </TableView>
      <ComboBox fx:id="productIdCombo" layoutX="211.0" layoutY="250.0" onAction="#loadProductId" prefHeight="38.0" prefWidth="259.0" promptText="Select Product ID" />
    </children>
</AnchorPane>
