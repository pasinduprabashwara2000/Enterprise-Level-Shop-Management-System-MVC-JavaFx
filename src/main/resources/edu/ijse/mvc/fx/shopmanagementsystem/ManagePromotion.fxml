        </Label>
        <ComboBox fx:id="activeCmb" layoutX="206.0" layoutY="238.0" prefHeight="35.0" prefWidth="259.0" promptText="Select Status" />

        <Label layoutX="521.0" layoutY="240.0" prefWidth="157.0" text="Category ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="categoryIDTxt" layoutX="650.0" layoutY="238.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="295.0" prefWidth="157.0" text="Product ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="productIDTxt" layoutX="206.0" layoutY="293.0" prefWidth="259.0" />

        <Button fx:id="saveBtn" layoutX="236.0" layoutY="350.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="350.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="350.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="350.0" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="promotionTable" layoutX="33.0" layoutY="410.0" prefHeight="210.0" prefWidth="1003.0">
            <columns>
                <TableColumn prefWidth="110.0" text="Promotion ID" />
                <TableColumn prefWidth="110.0" text="Name" />
                <TableColumn prefWidth="110.0" text="Type" />
                <TableColumn prefWidth="90.0" text="Value" />
                <TableColumn prefWidth="110.0" text="Start Date" />
                <TableColumn prefWidth="110.0" text="End Date" />
                <TableColumn prefWidth="80.0" text="Active" />
                <TableColumn prefWidth="130.0" text="Category ID" />
                <TableColumn prefWidth="149.0" text="Product ID" />
            </columns>
