        <Button fx:id="saveBtn" layoutX="236.0" layoutY="304.0" onAction="#navigateSave" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Save" />
        <Button fx:id="updateBtn" layoutX="395.0" layoutY="304.0" onAction="#navigateUpdate" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Update" />
        <Button fx:id="deleteBtn" layoutX="552.0" layoutY="304.0" onAction="#navigateDelete" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Delete" />
        <Button fx:id="resetBtn" layoutX="706.0" layoutY="304.0" onAction="#navigateReset" prefHeight="38.0" prefWidth="132.0" styleClass="btn" text="Reset" />

        <TableView fx:id="returnProductTable" layoutX="33.0" layoutY="370.0" prefHeight="260.0" prefWidth="1003.0">
            <columns>
                <TableColumn fx:id="colReturnItemID" prefWidth="120.0" text="Return Item ID" />
                <TableColumn fx:id="colReturnID" prefWidth="120.0" text="Return ID" />
                <TableColumn fx:id="colProductID" prefWidth="100.0" text="Product ID" />
                <TableColumn fx:id="colSaleItemID" prefWidth="142.0" text="Sale Item ID" />
                <TableColumn fx:id="colQuantity" prefWidth="169.0" text="Quantity" />
                <TableColumn fx:id="colRefundAmount" prefWidth="160.0" text="Refund Amount" />
                <TableColumn fx:id="colAction" prefWidth="190.0" text="Action" />
            </columns>
        </TableView>
