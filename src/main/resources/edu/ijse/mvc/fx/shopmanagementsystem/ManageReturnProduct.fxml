<AnchorPane prefHeight="640.0" prefWidth="1075.0" styleClass="white-bg" stylesheets="@css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.mvc.fx.shopmanagementsystem.view.ManageReturnProductController">

    <children>
        <Label layoutX="33.0" layoutY="18.0" prefHeight="38.0" prefWidth="300.0" text="Manage Return Product">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="34.0" layoutY="76.0" prefWidth="157.0" text="Return Item ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="returnItemIDTxt" layoutX="206.0" layoutY="75.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="132.0" prefWidth="157.0" text="Return ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="returnIDTxt" layoutX="206.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="187.0" prefWidth="157.0" text="Product ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="productIDTxt" layoutX="206.0" layoutY="185.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="76.0" prefWidth="157.0" text="Sale Item ID :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="saleItemIDTxt" layoutX="650.0" layoutY="75.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="132.0" prefWidth="157.0" text="Quantity :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="quantityTxt" layoutX="650.0" layoutY="130.0" prefWidth="259.0" />

        <Label layoutX="521.0" layoutY="187.0" prefWidth="157.0" text="Refund Amount :">
            <font><Font size="15.0" /></font>
        </Label>
        <TextField fx:id="refundAmountTxt" layoutX="650.0" layoutY="185.0" prefWidth="259.0" />

        <Label layoutX="34.0" layoutY="240.0" prefWidth="157.0" text="Action :">
